<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fond"
    tools:context=".AccueilActivity">

    <!-- SCROLL VIEW PRINCIPALE -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#99FFFFFF"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECTION BIENVENUE -->
            <LinearLayout
                android:id="@+id/layoutBienvenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="16dp">

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Flèche"
                    app:srcCompat="@drawable/baseline_double_arrow_24"
                    app:tint="#1c2a50"/>

                <TextView
                    android:id="@+id/tvBienvenue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Bienvenue dans BokyNet, votre mini librairie numérique. Ici, les savoirs circulent librement."
                    android:textColor="#1c2a50"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:singleLine="false"/>
            </LinearLayout>

            <!-- SECTION VALOR -->
            <LinearLayout
                android:id="@+id/layoutGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="#528ac5"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="Connaissance"
                        android:src="@drawable/img_b_acc1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Connaissance"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="mobile &amp; web"
                        android:src="@drawable/img_b_acc2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="mobile &amp; web"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="Lecteurs"
                        android:src="@drawable/img_b_acc3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Lecteurs"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- TITRE DES LIVRES RECOMMANDÉS -->
            <TextView
                android:id="@+id/tvRecommandes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Catalogue des livres"
                android:textColor="#1c2a50"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- GRID LAYOUT DYNAMIQUE DES LIVRES -->
            <GridLayout
                android:id="@+id/gridLivres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="24dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:useDefaultMargins="true"/>


        </LinearLayout>
    </ScrollView>

    <!-- NAVBAR -->
    <include
        layout="@layout/navbar"
        android:id="@+id/navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
